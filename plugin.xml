<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.asapsystems.barcodemin"
    version="0.1.5">
    <name>BarcodeminCDV</name>
    <description>Super Fast Barcode Scanner Cordova plugin</description>
    <license>MIT</license>
    <keywords>barcode</keywords>
    <repo>https://github.com/ASAPWebTeam/barcodemin.git</repo>
    <issue></issue>
    
    <js-module src="www/BarcodeminCDV.js" name="BarcodeminCDV">
        <clobbers target="barcodemin" />
    </js-module>
    
    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="BarcodeminCDV">
                <param name="ios-package" value="BarcodeminCDV" />
            </feature>
        </config-file>
        
        <header-file src="src/ios/barcodeViewController.h" />
        <header-file src="src/ios/BarcodeminCDV.h" />
        
        <source-file src="src/ios/BarcodeminCDV.m" />
        <source-file src="src/ios/barcodeViewController.m" />

        <resource-file src="src/ios/barcodeViewController.xib" />
        <resource-file src="src/ios/flip.png" />
        <resource-file src="src/ios/flip@2x.png" />
        <resource-file src="src/ios/beep.caf" />

        <framework src="AVFoundation.framework" />
        <framework src="UIKit.framework" />
        <framework src="QuartzCore.framework" />
        <framework src="AudioToolbox.framework" />

    </platform>

    
</plugin>


